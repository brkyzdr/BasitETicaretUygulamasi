@model Entities.Product

@{
    ViewBag.Title = "Ürün Detayı";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card product-detail-card shadow-sm border-0 p-3">
                <div class="row g-4 align-items-center">
                    <div class="col-md-5">
                        <div class="product-detail-image-wrapper">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <h2 class="card-title fw-bold mb-3">@Model.Name</h2>
                            <p class="card-text text-muted mb-3">@Model.Description</p>

                            <p class="card-text mb-2">
                                <strong class="text-dark">Fiyat:</strong>
                                <span class="text-primary fw-bold">@Model.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                            </p>

                            <p class="card-text mb-4">
                                <strong class="text-dark">Stok:</strong> @Model.Stock Adet
                            </p>

                            <a href="@Url.Action("AddToCart", "Cart", new { id = Model.Id })"
                               class="btn btn-success px-4 py-2">
                                <i class="fas fa-cart-plus me-2"></i> Sepete Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
