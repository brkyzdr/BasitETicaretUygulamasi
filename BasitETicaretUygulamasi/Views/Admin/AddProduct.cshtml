@model Entities.Product
@{
    ViewBag.Title = "Ürün Ekle";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">Yeni Ürün Ekle</h2>

    @using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="mb-3">
            @Html.LabelFor(x => x.Name, "Ürün Adı", htmlAttributes: new { @class = "form-label fw-semibold" })
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Örn: Yazlık Fedora Şapka" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(x => x.Description, "Açıklama", htmlAttributes: new { @class = "form-label fw-semibold" })
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 3, placeholder = "Ürün açıklaması..." })
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(x => x.Price, "Fiyat (₺)", htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Örn: 149.99" })
            </div>
            <div class="col-md-6 mb-3">
                @Html.LabelFor(x => x.Stock, "Stok", htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", type = "number", placeholder = "Örn: 30" })
            </div>
        </div>

        <div class="mb-3">
            @Html.LabelFor(x => x.CategoryId, "Kategori", htmlAttributes: new { @class = "form-label fw-semibold" })
            @Html.DropDownListFor(x => x.CategoryId, ViewBag.Categories as SelectList, "-- Seçiniz --", new { @class = "form-select" })
        </div>

        <div class="mb-4">
            <label for="imageFile" class="form-label fw-semibold">Ürün Görseli</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check me-1"></i> Kaydet
            </button>
            <a href="@Url.Action("ProductList", "Admin")" class="btn btn-outline-secondary">
                İptal
            </a>
        </div>
    }
</div>
