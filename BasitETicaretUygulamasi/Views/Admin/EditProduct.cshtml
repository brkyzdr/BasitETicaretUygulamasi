@model Entities.Product
@{
    ViewBag.Title = "Ürün Düzenle";
}

<h2>Ürün Düzenle</h2>
<hr />

@using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)

    <div class="mb-3">
        @Html.LabelFor(x => x.Name, "Ürün Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.Description, "Açıklama")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 3 })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.Price, "Fiyat")
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", type = "number", step = "0.01" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.Stock, "Stok")
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", type = "number" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.CategoryId, "Kategori")
        @Html.DropDownListFor(x => x.CategoryId, ViewBag.Categories as SelectList, "-- Seçiniz --", new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Mevcut Görsel:</label><br />
        <img src="@Model.ImageUrl" style="height: 100px; object-fit: contain;" />
    </div>

    <div class="mb-3">
        <label for="imageFile">Yeni Görsel (isteğe bağlı):</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("ProductList", "Admin")" class="btn btn-secondary">İptal</a>
}
