@model Entities.Product
@{
    ViewBag.Title = "Ürün Düzenle";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">Ürün Düzenle</h2>

    @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x => x.Id)

        <div class="mb-3">
            @Html.LabelFor(x => x.Name, "Ürün Adı", htmlAttributes: new { @class = "form-label fw-semibold" })
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(x => x.Description, "Açıklama", htmlAttributes: new { @class = "form-label fw-semibold" })
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 3 })
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(x => x.Price, "Fiyat (₺)", htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
            <div class="col-md-6 mb-3">
                @Html.LabelFor(x => x.Stock, "Stok", htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", type = "number" })
            </div>
        </div>

        <div class="mb-3">
            @Html.LabelFor(x => x.CategoryId, "Kategori", htmlAttributes: new { @class = "form-label fw-semibold" })
            @Html.DropDownListFor(x => x.CategoryId, ViewBag.Categories as SelectList, "-- Seçiniz --", new { @class = "form-select" })
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold">Mevcut Görsel</label>
            <div class="border rounded p-2 bg-white text-center" style="max-width: 200px;">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-height: 200px; object-fit: contain;" />
            </div>
        </div>

        <div class="mb-4">
            <label for="imageFile" class="form-label fw-semibold">Yeni Görsel (İsteğe Bağlı)</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Güncelle
            </button>
            <a href="@Url.Action("ProductList", "Admin")" class="btn btn-outline-secondary">
                İptal
            </a>
        </div>
    }
</div>
