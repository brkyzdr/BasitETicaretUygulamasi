@model List<Entities.Category>
@{
    ViewBag.Title = "Kategori Listesi";
}

<h2>Kategoriler</h2>
<a href="@Url.Action("AddCategory", "Admin")" class="btn btn-success mb-3">+ Yeni Kategori</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <img src="@category.ImageUrl" alt="@category.Name"
                         style="height: 60px; object-fit: contain;" />
                </td>
                <td>
                    <a href="@Url.Action("EditCategory", "Admin", new { id = category.Id })" class="btn btn-sm btn-primary">Düzenle</a>
                    <a href="@Url.Action("DeleteCategory", "Admin", new { id = category.Id })" class="btn btn-sm btn-danger"
                       onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
