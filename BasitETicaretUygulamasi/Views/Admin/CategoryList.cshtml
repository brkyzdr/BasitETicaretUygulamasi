@model List<Entities.Category>
@{
    ViewBag.Title = "Kategori Listesi";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Kategoriler</h2>
        <a href="@Url.Action("AddCategory", "Admin")" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Yeni Kategori
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm border rounded">
            <thead class="table-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Adı</th>
                    <th scope="col">Görsel</th>
                    <th scope="col" class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td class="fw-semibold">@category.Name</td>
                        <td>
                            <img src="@category.ImageUrl"
                                 alt="@category.Name"
                                 class="img-thumbnail"
                                 style="height: 60px; width: auto; object-fit: contain;" />
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("EditCategory", "Admin", new { id = category.Id })"
                               class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a href="@Url.Action("DeleteCategory", "Admin", new { id = category.Id })"
                               class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
