@model Entities.Category
@{
    ViewBag.Title = "Kategori Ekle";
}

<h2>Yeni Kategori Ekle</h2>
<hr />

@using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="mb-3">
        @Html.LabelFor(x => x.Name, "Kategori Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="mb-3">
        <label for="imageFile">Görsel Yükle</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="@Url.Action("CategoryList", "Admin")" class="btn btn-secondary">İptal</a>
}

