@model List<Entities.Product>
@{
    ViewBag.Title = "Ürün Listesi";
}

<h2>Ürünler</h2>
<a href="@Url.Action("AddProduct", "Admin")" class="btn btn-success mb-3">+ Yeni Ürün</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Kategori</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                <td>@product.Stock</td>
                <td>@product.Category.Name</td>
                <td>
                    <img src="@product.ImageUrl" alt="@product.Name"
                         style="height: 60px; object-fit: contain;" />
                </td>
                <td>
                    <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-primary">Düzenle</a>
                    <a href="@Url.Action("DeleteProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-danger"
                       onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
