@model List<Entities.Product>
@{
    ViewBag.Title = "Ürün Listesi";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Ürünler</h2>
        <a href="@Url.Action("AddProduct", "Admin")" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Yeni Ürün
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm border rounded">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Adı</th>
                    <th class="text-end">Fiyat</th>
                    <th class="text-center">Stok</th>
                    <th>Kategori</th>
                    <th>Görsel</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td class="fw-semibold">@product.Name</td>
                        <td class="text-end">@product.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                        <td class="text-center">@product.Stock</td>
                        <td>@product.Category.Name</td>
                        <td>
                            <img src="@product.ImageUrl"
                                 alt="@product.Name"
                                 class="img-thumbnail"
                                 style="height: 60px; width: auto; object-fit: contain;" />
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })"
                               class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a href="@Url.Action("DeleteProduct", "Admin", new { id = product.Id })"
                               class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
