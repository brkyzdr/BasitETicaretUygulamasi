@model List<Entities.OrderItem>
@{
    ViewBag.Title = "Sipariş Detayı";
    var orderId = ViewBag.OrderId;
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">📦 Sipariş Detayı <span class="text-muted">(#@orderId)</span></h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center py-4">
            Bu siparişe ait ürün bulunamadı.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm border rounded">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Ürün</th>
                        <th scope="col">Adet</th>
                        <th scope="col">Birim Fiyat</th>
                        <th scope="col">Ara Toplam</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                            <td>@((item.Quantity * item.UnitPrice).ToString("C", new System.Globalization.CultureInfo("tr-TR")))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a href="@Url.Action("OrderList", "Admin")" class="btn btn-outline-secondary mt-3">
            ← Sipariş Listesine Dön
        </a>
    }
</div>
