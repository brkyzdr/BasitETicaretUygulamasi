@model Entities.Category
@{
    ViewBag.Title = "Kategori Düzenle";
}

<h2>Kategori Düzenle</h2>
<hr />

@using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)

    <div class="mb-3">
        @Html.LabelFor(x => x.Name, "Kategori Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="mb-3">
        <label>Mevcut Görsel:</label><br />
        <img src="@Model.ImageUrl" style="height:100px; object-fit:contain;" />
    </div>

    <div class="mb-3">
        <label for="imageFile">Yeni Görsel (İsteğe bağlı):</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("CategoryList", "Admin")" class="btn btn-secondary">İptal</a>
}
