@model List<BasitETicaretUygulamasi.ViewModels.CartItemViewModel>

@{
    ViewBag.Title = "Sepetim";
    decimal total = Model.Sum(item => item.Product.Price * item.Quantity);
}

<h2>Sepetim</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">
        Sepetiniz şu anda boş.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Ara Toplam</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@(item.Product.Price * item.Quantity).ToString("C")</td>
                    <td>
                        <a href="@Url.Action("Remove", "Cart", new { id = item.Product.Id })" class="btn btn-danger btn-sm">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-right">Toplam:</th>
                <th>@total.ToString("C")</th>
                <th></th>
            </tr>
        </tfoot>
    </table>

    <div class="d-flex justify-content-between">
        <a href="@Url.Action("Clear", "Cart")" class="btn btn-outline-danger">Sepeti Temizle</a>
        <a href="@Url.Action("Checkout", "Checkout")" class="btn btn-success">Siparişi Tamamla</a>
    </div>
}
